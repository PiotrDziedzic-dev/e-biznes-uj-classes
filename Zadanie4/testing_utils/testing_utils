// create category

curl -X POST http://localhost:1323/categories \
-H "Content-Type: application/json" \
-d '{"name": "Electronics"}'

// list all categories

curl http://localhost:1323/categories

// create product

curl -X POST http://localhost:1323/products \
-H "Content-Type: application/json" \
-d '{
  "name": "Laptop",
  "price": 2999.99,
  "category_id": 1
}'

// get all products

curl http://localhost:1323/products

// get single product

curl http://localhost:1323/products/1

// update single product

curl -X PUT http://localhost:1323/products/1 \
-H "Content-Type: application/json" \
-d '{
  "name": "Gaming Laptop",
  "price": 3999.99,
  "category_id": 1
}'

// delete product

curl -X DELETE http://localhost:1323/products/1

// create cart
curl -X POST http://localhost:1323/carts

// add product to cart
curl -X POST http://localhost:1323/carts/1/products/1

// get cart with products
curl http://localhost:1323/carts/1
# Health
GET /health controllers.HealthController.ping


# Categories
GET /categories controllers.CategoriesController.list
GET /categories/:id controllers.CategoriesController.get(id: Long)
POST /categories controllers.CategoriesController.create
PUT /categories/:id controllers.CategoriesController.update(id: Long)
DELETE /categories/:id controllers.CategoriesController.delete(id: Long)


# Products
GET /products controllers.ProductsController.list
GET /products/:id controllers.ProductsController.get(id: Long)
POST /products controllers.ProductsController.create
PUT /products/:id controllers.ProductsController.update(id: Long)
DELETE /products/:id controllers.ProductsController.delete(id: Long)


